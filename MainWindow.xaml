<Window x:Class="FuncLab.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:oxy="http://oxyplot.org/wpf" mc:Ignorable="d" Title="FuncLab - Function Plotter" Height="500" Width="950">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="270"/>
        </Grid.ColumnDefinitions>
        <!-- Fonksiyon Giriş -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Margin="0 0 0 10">
            <TextBlock Text="f(x) = " VerticalAlignment="Center" FontSize="16"/>
            <TextBox x:Name="FunctionInput" Width="400" Height="30" FontSize="16" Margin="5 0"/>
        </StackPanel>
        <!-- Grafik -->
        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="0 0 10 0">
            <oxy:PlotView x:Name="PlotView" Model="{Binding PlotModel}" Margin="5"/>
        </Border>
        <!-- Butonlar -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Margin="0 10 0 0" HorizontalAlignment="Center">
            <Button Content="Draw" Width="100" Height="35" Margin="5" Click="DrawButton_Click"/>
            <Button Content="Derivative" Width="100" Height="35" Margin="5" Click="DerivativeButton_Click"/>
            <Button Content="Integral" Width="100" Height="35" Margin="5" Click="IntegralButton_Click"/>
            <Button Content="Definite Integral" Width="130" Height="35" Margin="5" Click="DefiniteIntegralButton_Click"/>
            <Button Content="Clear" Width="100" Height="35" Margin="5" Click="ClearButton_Click"/>
        </StackPanel>
        <!-- Sağ Panel -->
        <StackPanel Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" Margin="10 0 0 0">
            <TextBlock Text="Results" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
            <TextBlock Text="Derivative:" FontSize="14" Margin="0 5"/>
            <TextBox x:Name="DerivativeResult" Height="60" FontSize="14" IsReadOnly="True" TextWrapping="Wrap"/>
            <TextBlock Text="Integral:" FontSize="14" Margin="0 10 0 5"/>
            <TextBox x:Name="IntegralResult" Height="60" FontSize="14" IsReadOnly="True" TextWrapping="Wrap"/>
            <!-- Belirli Integral Girişi -->
            <StackPanel x:Name="DefIntegralPanel" Visibility="Collapsed" Margin="0 15 0 0">
                <TextBlock Text="Definite Integral Limits:" FontSize="14" FontWeight="Bold" Margin="0 0 0 5"/>
                <StackPanel Orientation="Horizontal" Margin="0 5">
                    <TextBlock Text="a:" VerticalAlignment="Center"/>
                    <TextBox x:Name="LowerLimitInput" Width="60" Margin="5 0"/>
                    <TextBlock Text="b:" VerticalAlignment="Center" Margin="10 0 0 0"/>
                    <TextBox x:Name="UpperLimitInput" Width="60" Margin="5 0"/>
                </StackPanel>
                <Button Content="OK" Width="80" Height="30" HorizontalAlignment="Left" Click="DefIntegralOkButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>